<Page
  x:Class="NowPlaying.Views.Pages.MiniPlayerPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:helpers="clr-namespace:NowPlaying.Helpers"
  xmlns:local="clr-namespace:NowPlaying.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  d:DataContext="{d:DesignInstance local:MiniPlayerPage,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="280"
  d:DesignWidth="640"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d">

  <Grid Margin="16" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" MinWidth="120" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  アルバムアートワーク 200×200  -->
    <Border
      Grid.Row="0"
      Grid.Column="0"
      Width="200"
      Height="200"
      Margin="0,0,16,0"
      Background="{DynamicResource ControlFillColorDefaultBrush}"
      CornerRadius="6">
      <Border.Effect>
        <DropShadowEffect
          BlurRadius="8"
          Direction="270"
          Opacity="0.25"
          ShadowDepth="3" />
      </Border.Effect>
      <Grid>
        <Image
          Width="200"
          Height="200"
          Source="{Binding ViewModel.CurrentTrack.AlbumArtwork, Mode=OneWay}"
          Stretch="Uniform">
          <Image.Style>
            <Style TargetType="Image">
              <Setter Property="Visibility" Value="Visible" />
              <Style.Triggers>
                <DataTrigger Binding="{Binding ViewModel.CurrentTrack.AlbumArtwork, Mode=OneWay}" Value="{x:Null}">
                  <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </Image.Style>
        </Image>
        <ui:SymbolIcon
          Width="80"
          Height="80"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Foreground="{DynamicResource TextFillColorTertiaryBrush}"
          Symbol="ShareAndroid24"
          Visibility="{Binding ViewModel.CurrentTrack.AlbumArtwork, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
      </Grid>
    </Border>

    <!--  右側: タイトルと曲情報 4段表示  -->
    <StackPanel
      Grid.Row="0"
      Grid.Column="1"
      VerticalAlignment="Center"
      helpers:MarqueeScrollGroupBehavior.GapWidth="80"
      helpers:MarqueeScrollGroupBehavior.IsEnabled="True"
      helpers:MarqueeScrollGroupBehavior.ScrollSpeed="30">
      <ScrollViewer
        x:Name="TitleScroll"
        MaxWidth="250"
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Disabled"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
        <Grid>
          <TextBlock
            FontSize="18"
            FontWeight="SemiBold"
            Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
            TextTrimming="CharacterEllipsis"
            TextWrapping="NoWrap"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}" />
          <StackPanel Orientation="Horizontal" Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock
              FontSize="18"
              FontWeight="SemiBold"
              Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
              TextWrapping="NoWrap" />
            <Border Width="80" />
            <TextBlock
              FontSize="18"
              FontWeight="SemiBold"
              Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
              TextWrapping="NoWrap" />
          </StackPanel>
        </Grid>
      </ScrollViewer>
      <ScrollViewer
        x:Name="ArtistScroll"
        MaxWidth="250"
        Margin="0,4,0,0"
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Disabled"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
        <Grid>
          <TextBlock
            FontSize="14"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
            TextTrimming="CharacterEllipsis"
            TextWrapping="NoWrap"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}" />
          <StackPanel Orientation="Horizontal" Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock
              FontSize="14"
              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
              Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
              TextWrapping="NoWrap" />
            <Border Width="80" />
            <TextBlock
              FontSize="14"
              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
              Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
              TextWrapping="NoWrap" />
          </StackPanel>
        </Grid>
      </ScrollViewer>
      <ScrollViewer
        x:Name="AlbumScroll"
        MaxWidth="250"
        Margin="0,4,0,0"
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Disabled"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
        <Grid>
          <TextBlock
            FontSize="12"
            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
            Text="{Binding ViewModel.CurrentTrack.AlbumTitle, Mode=OneWay}"
            TextTrimming="CharacterEllipsis"
            TextWrapping="NoWrap"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}" />
          <StackPanel Orientation="Horizontal" Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock
              FontSize="12"
              Foreground="{DynamicResource TextFillColorTertiaryBrush}"
              Text="{Binding ViewModel.CurrentTrack.AlbumTitle, Mode=OneWay}"
              TextWrapping="NoWrap" />
            <Border Width="80" />
            <TextBlock
              FontSize="12"
              Foreground="{DynamicResource TextFillColorTertiaryBrush}"
              Text="{Binding ViewModel.CurrentTrack.AlbumTitle, Mode=OneWay}"
              TextWrapping="NoWrap" />
          </StackPanel>
        </Grid>
      </ScrollViewer>
      <TextBlock
        Margin="0,8,0,0"
        FontSize="12"
        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
        Text="{Binding ViewModel.CurrentTrack.DisplayText, Mode=OneWay}"
        TextTrimming="CharacterEllipsis"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
      <ui:Button
        Margin="0,12,0,0"
        HorizontalAlignment="Left"
        Appearance="Primary"
        Command="{Binding ViewModel.ShareCommand, Mode=OneWay}"
        Content="Xにシェア"
        Icon="SymbolRegular.ChannelShare24" />
    </StackPanel>
  </Grid>
</Page>
