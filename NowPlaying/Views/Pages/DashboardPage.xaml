<Page
  x:Class="NowPlaying.Views.Pages.DashboardPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:helpers="clr-namespace:NowPlaying.Helpers"
  xmlns:local="clr-namespace:NowPlaying.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="Now Playing"
  d:DataContext="{d:DesignInstance local:DashboardPage,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="740"
  d:DesignWidth="640"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d">

  <Grid Margin="24" VerticalAlignment="Top">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  アルバムアートワーク  -->
    <Border
      Grid.Row="0"
      Width="400"
      Height="400"
      Margin="0,0,0,24"
      Background="{DynamicResource ControlFillColorDefaultBrush}"
      CornerRadius="8">
      <Border.Effect>
        <DropShadowEffect
          BlurRadius="12"
          Direction="270"
          Opacity="0.3"
          ShadowDepth="4" />
      </Border.Effect>
      <Grid>
        <Image
          Width="400"
          Height="400"
          Source="{Binding ViewModel.CurrentTrack.AlbumArtwork, Mode=OneWay}"
          Stretch="UniformToFill">
          <Image.Style>
            <Style TargetType="Image">
              <Setter Property="Visibility" Value="Visible" />
              <Style.Triggers>
                <DataTrigger Binding="{Binding ViewModel.CurrentTrack.AlbumArtwork, Mode=OneWay}" Value="{x:Null}">
                  <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </Image.Style>
        </Image>
        <ui:SymbolIcon
          Width="160"
          Height="160"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Foreground="{DynamicResource TextFillColorTertiaryBrush}"
          Symbol="ShareAndroid24"
          Visibility="{Binding ViewModel.CurrentTrack.AlbumArtwork, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
      </Grid>
    </Border>

    <!--  曲情報  -->
    <StackPanel
      Grid.Row="1"
      Margin="0,0,0,24"
      helpers:MarqueeScrollGroupBehavior.GapWidth="120"
      helpers:MarqueeScrollGroupBehavior.IsEnabled="True"
      helpers:MarqueeScrollGroupBehavior.ScrollSpeed="40">
      <ScrollViewer
        x:Name="TitleScroll"
        Width="400"
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Disabled"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
        <Grid>
          <!--  スクロール不要時: 単一テキスト（右側に先頭文字が出ない）  -->
          <TextBlock
            FontSize="24"
            FontWeight="SemiBold"
            Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
            TextWrapping="NoWrap"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}" />
          <!--  スクロール必要時: [Text][Gap][Text]  -->
          <StackPanel
            Orientation="Horizontal"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock
              FontSize="24"
              FontWeight="SemiBold"
              Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
              TextWrapping="NoWrap" />
            <Border Width="120" />
            <TextBlock
              FontSize="24"
              FontWeight="SemiBold"
              Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
              TextWrapping="NoWrap" />
          </StackPanel>
        </Grid>
      </ScrollViewer>
      <ScrollViewer
        x:Name="ArtistScroll"
        Width="400"
        Margin="0,4,0,0"
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Disabled"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
        <Grid>
          <!--  スクロール不要時: 単一テキスト  -->
          <TextBlock
            FontSize="16"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
            TextWrapping="NoWrap"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}" />
          <!--  スクロール必要時: [Text][Gap][Text]  -->
          <StackPanel
            Orientation="Horizontal"
            Visibility="{Binding (helpers:MarqueeScrollGroupBehavior.NeedsScrolling), RelativeSource={RelativeSource AncestorType=ScrollViewer}, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock
              FontSize="16"
              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
              Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
              TextWrapping="NoWrap" />
            <Border Width="120" />
            <TextBlock
              FontSize="16"
              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
              Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
              TextWrapping="NoWrap" />
          </StackPanel>
        </Grid>
      </ScrollViewer>
      <TextBlock
        Margin="0,16,0,0"
        FontSize="14"
        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
        Text="{Binding ViewModel.CurrentTrack.DisplayText, Mode=OneWay}"
        TextTrimming="CharacterEllipsis"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
    </StackPanel>

    <!--  シェアボタン  -->
    <ui:Button
      Grid.Row="2"
      HorizontalAlignment="Left"
      Appearance="Primary"
      Command="{Binding ViewModel.ShareCommand, Mode=OneWay}"
      Content="Xでシェア"
      Icon="SymbolRegular.ChannelShare24" />
  </Grid>
</Page>
