<Page
  x:Class="NowPlaying.Views.Pages.DashboardPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:NowPlaying.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="Now Playing"
  d:DataContext="{d:DesignInstance local:DashboardPage,
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d">

  <Grid Margin="24" VerticalAlignment="Top">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  アルバムアートワーク  -->
    <Border
      Grid.Row="0"
      Width="200"
      Height="200"
      Margin="0,0,0,24"
      Background="{DynamicResource ControlFillColorDefaultBrush}"
      CornerRadius="8">
      <Border.Effect>
        <DropShadowEffect
          BlurRadius="12"
          Direction="270"
          Opacity="0.3"
          ShadowDepth="4" />
      </Border.Effect>
      <Grid>
        <Image
          Width="200"
          Height="200"
          Source="{Binding ViewModel.CurrentTrack.AlbumArtwork, Mode=OneWay}"
          Stretch="UniformToFill">
          <Image.Style>
            <Style TargetType="Image">
              <Setter Property="Visibility" Value="Visible" />
              <Style.Triggers>
                <DataTrigger Binding="{Binding ViewModel.CurrentTrack.AlbumArtwork, Mode=OneWay}" Value="{x:Null}">
                  <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </Image.Style>
        </Image>
        <ui:SymbolIcon
          Width="80"
          Height="80"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Foreground="{DynamicResource TextFillColorTertiaryBrush}"
          Symbol="ShareAndroid24"
          Visibility="{Binding ViewModel.CurrentTrack.AlbumArtwork, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
      </Grid>
    </Border>

    <!--  曲情報  -->
    <StackPanel Grid.Row="1" Margin="0,0,0,24">
      <TextBlock
        FontSize="24"
        FontWeight="SemiBold"
        Text="{Binding ViewModel.CurrentTrack.Title, Mode=OneWay}"
        TextTrimming="CharacterEllipsis"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}" />
      <TextBlock
        Margin="0,4,0,0"
        FontSize="16"
        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
        Text="{Binding ViewModel.CurrentTrack.Artist, Mode=OneWay}"
        TextTrimming="CharacterEllipsis"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}" />
      <TextBlock
        Margin="0,16,0,0"
        FontSize="14"
        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
        Text="{Binding ViewModel.CurrentTrack.DisplayText, Mode=OneWay}"
        TextTrimming="CharacterEllipsis"
        Visibility="{Binding ViewModel.CurrentTrack.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
    </StackPanel>

    <!--  シェアボタン  -->
    <ui:Button
      Grid.Row="2"
      HorizontalAlignment="Left"
      Appearance="Primary"
      Command="{Binding ViewModel.ShareCommand, Mode=OneWay}"
      Content="Xでシェア"
      Icon="SymbolRegular.ChannelShare24" />
  </Grid>
</Page>
